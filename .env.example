# API認証方式の変更（ユーザーID/パスワード）
# 立花証券API設定
TACHIBANA_USER_ID=your_user_id_here
TACHIBANA_PASSWORD=your_password_here
TACHIBANA_ENVIRONMENT=demo  # prod または demo

# ログレベル（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO

# レポート設定
REPORT_OUTPUT_DIR=docs

# Gemini API設定（オプション: AI分析機能用）
# APIキーの取得方法: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# AI分析の有効/無効（デフォルト: false）
# trueにするとレポート生成後に自動的にAI分析を実行します
ENABLE_AI_ANALYSIS=false
